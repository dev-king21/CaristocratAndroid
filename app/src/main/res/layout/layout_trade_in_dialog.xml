<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp24"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvTradingMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_regular"
            android:textColor="@color/colorBlack"
            android:text="@string/app_name"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp16"
            android:fontFamily="@font/poppins_regular"
            android:textColor="@color/colorBlack"
            android:text="@string/enter_trading_amount"/>

        <com.ingic.caristocrat.helpers.CustomTextInputLayout
            android:id="@+id/ilAmount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/etAmount"
                style="@style/RegistrationInputLayoutOptions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:digits="0123456789"
                android:fontFamily="@font/poppins_regular"
                android:hint="@string/example_1000"
                android:imeOptions="actionDone"
                android:inputType="number"
                android:maxLength="32"
                android:maxLines="1" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp0.5"
                android:layout_marginTop="@dimen/dp4"
                android:background="@color/colorTransparentGray" />

        </com.ingic.caristocrat.helpers.CustomTextInputLayout>

    </LinearLayout>
</layout>