<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="?attr/actionBarSize">

            <LinearLayout
                android:id="@+id/llTradingCarDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ivCarImage"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:scaleType="centerCrop"
                    android:src="@drawable/car_prof_bg" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:orientation="vertical"
                    android:padding="@dimen/dp12">

                    <TextView
                        android:id="@+id/tvCarName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_regular"
                        android:singleLine="true"
                        android:text="@string/app_name"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/sp18"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvCarBrand"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_regular"
                        android:singleLine="true"
                        android:text="@string/app_name"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/sp14" />

                    <TextView
                        android:id="@+id/tvCarYear"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_regular"
                        android:singleLine="true"
                        android:text="@string/app_name"
                        android:textColor="@color/colorDarkGray"
                        android:textSize="@dimen/sp16" />

                    <TextView
                        android:id="@+id/tvCarPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_regular"
                        android:singleLine="true"
                        android:text="@string/app_name"
                        android:textColor="@color/colorDarkGray"
                        android:textSize="@dimen/sp18" />

                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp3"
                android:background="@color/colorDivider" />

            <LinearLayout
                android:id="@+id/llPeriod"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/dp16">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp16"
                    android:fontFamily="@font/poppins_regular"
                    android:text="@string/period"
                    android:textColor="@color/colorBlack" />

                <com.warkiz.widget.IndicatorSeekBar
                    android:id="@+id/rangeSeekbarPeriod"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:isb_seek_smoothly="true"
                    app:isb_show_thumb_text="true"
                    app:isb_thumb_drawable="@drawable/knob"
                    app:isb_thumb_size="32dp"
                    app:isb_thumb_text_color="@color/colorDivider"
                    app:isb_ticks_count="5"
                    app:isb_min="12"
                    app:isb_track_background_color="@color/colorDivider"
                    app:isb_track_progress_color="@color/colorBlack"
                    app:isb_show_indicator="none"/>


                <!--<com.crystal.crystalrangeseekbar.widgets.CrystalSeekbar-->
                <!--android:id="@+id/rangeSeekbarPeriod"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--app:bar_color="@color/colorDivider"-->
                <!--app:bar_highlight_color="@color/colorFilterRangeLine"-->
                <!--app:left_thumb_image="@drawable/filtercircle"-->
                <!--app:steps="1" />-->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvMinPeriod"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:alpha="0.5"
                        android:fontFamily="@font/poppins_regular"
                        android:gravity="start"
                        android:text="@string/months_12"
                        android:textSize="@dimen/sp10" />

                    <TextView
                        android:id="@+id/tvMaxPeriod"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:alpha="0.5"
                        android:fontFamily="@font/poppins_regular"
                        android:gravity="end"
                        android:text="@string/months_60"
                        android:textSize="@dimen/sp10" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llDownPayment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/dp16">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp16"
                    android:fontFamily="@font/poppins_regular"
                    android:text="@string/down_payment"
                    android:textColor="@color/colorBlack" />

                <com.warkiz.widget.IndicatorSeekBar
                    android:id="@+id/rangeSeekbarDownPayment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:isb_indicator_color="@color/colorDivider"
                    app:isb_indicator_text_color="@color/colorWhite"
                    app:isb_indicator_text_size="13sp"
                    app:isb_seek_smoothly="true"
                    app:isb_show_indicator="circular_bubble"
                    app:isb_show_thumb_text="true"
                    app:isb_thumb_drawable="@drawable/knob"
                    app:isb_thumb_size="32dp"
                    app:isb_thumb_text_color="@color/colorDivider"

                    app:isb_track_background_color="@color/colorDivider"
                    app:isb_track_progress_color="@color/colorBlack" />


                <!--<com.crystal.crystalrangeseekbar.widgets.CrystalSeekbar-->
                <!--android:id="@+id/rangeSeekbarDownPayment"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--app:bar_color="@color/colorDivider"-->
                <!--app:bar_highlight_color="@color/colorFilterRangeLine"-->
                <!--app:left_thumb_image="@drawable/filtercircle"-->
                <!--app:steps="1" />-->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvMinDownPayment"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:alpha="0.5"
                        android:fontFamily="@font/poppins_regular"
                        android:gravity="start"
                        android:text="@string/percentage_0"
                        android:textSize="@dimen/sp10" />

                    <TextView
                        android:id="@+id/tvCalculatedDownPayment"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:alpha="0.5"
                        android:fontFamily="@font/poppins_regular"
                        android:gravity="center"
                        android:textSize="@dimen/sp10" />

                    <TextView
                        android:id="@+id/tvMaxDownPayment"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:alpha="0.5"
                        android:fontFamily="@font/poppins_regular"
                        android:gravity="end"
                        android:text="@string/percentage_75"
                        android:textSize="@dimen/sp10" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llInterestRate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/dp16">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp16"
                    android:fontFamily="@font/poppins_regular"
                    android:text="@string/interest_rate"
                    android:textColor="@color/colorBlack" />

                <com.warkiz.widget.IndicatorSeekBar
                    android:id="@+id/rangeSeekbarInterestRate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:isb_indicator_color="@color/colorDivider"
                    app:isb_indicator_text_color="@color/colorWhite"
                    app:isb_indicator_text_size="13sp"
                    app:isb_progress_value_float="true"
                    app:isb_seek_smoothly="true"
                    app:isb_show_indicator="circular_bubble"
                    app:isb_show_thumb_text="true"
                    app:isb_thumb_drawable="@drawable/knob"
                    app:isb_thumb_size="32dp"
                    app:isb_thumb_text_color="@color/colorDivider"
                    app:isb_track_background_color="@color/colorDivider"
                    app:isb_track_progress_color="@color/colorBlack" />

                <!--<com.crystal.crystalrangeseekbar.widgets.CrystalSeekbar-->
                <!--android:id="@+id/rangeSeekbarInterestRate"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--app:bar_color="@color/colorDivider"-->
                <!--app:bar_highlight_color="@color/colorFilterRangeLine"-->
                <!--app:left_thumb_image="@drawable/filtercircle"-->
                <!--app:steps="1" />-->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvMinInterestRate"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:alpha="0.5"
                        android:fontFamily="@font/poppins_regular"
                        android:gravity="start"
                        android:text="@string/percentage_0"
                        android:textSize="@dimen/sp10" />

                    <TextView
                        android:id="@+id/tvCalculatedInterestPayment"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:alpha="0.5"
                        android:fontFamily="@font/poppins_regular"
                        android:gravity="center"
                        android:textSize="@dimen/sp10" />

                    <TextView
                        android:id="@+id/tvMaxInterestRate"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:alpha="0.5"
                        android:fontFamily="@font/poppins_regular"
                        android:gravity="end"
                        android:text="@string/percentage_10"
                        android:textSize="@dimen/sp10" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llInsuranceRate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/dp16">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp16"
                    android:fontFamily="@font/poppins_regular"
                    android:text="@string/insurance_rate"
                    android:textColor="@color/colorBlack" />

                <com.warkiz.widget.IndicatorSeekBar
                    android:id="@+id/rangeSeekbarInsuranceRate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:isb_indicator_color="@color/colorDivider"
                    app:isb_indicator_text_color="@color/colorWhite"
                    app:isb_indicator_text_size="13sp"
                    app:isb_progress_value_float="true"
                    app:isb_seek_smoothly="true"
                    app:isb_show_indicator="circular_bubble"
                    app:isb_show_thumb_text="true"
                    app:isb_thumb_drawable="@drawable/knob"
                    app:isb_thumb_size="32dp"
                    app:isb_thumb_text_color="@color/colorDivider"
                    app:isb_track_background_color="@color/colorDivider"
                    app:isb_track_progress_color="@color/colorBlack" />


                <!--<com.crystal.crystalrangeseekbar.widgets.CrystalSeekbar-->
                <!--android:id="@+id/rangeSeekbarInsuranceRate"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--app:bar_color="@color/colorDivider"-->
                <!--app:bar_highlight_color="@color/colorFilterRangeLine"-->
                <!--app:left_thumb_image="@drawable/filtercircle"-->
                <!--app:steps="1" />-->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvMinInsuranceRate"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:alpha="0.5"
                        android:fontFamily="@font/poppins_regular"
                        android:gravity="start"
                        android:text="@string/percentage_0"
                        android:textSize="@dimen/sp10" />

                    <TextView
                        android:id="@+id/tvCalculatedInsurance"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:alpha="0.5"
                        android:fontFamily="@font/poppins_regular"
                        android:gravity="center"
                        android:textSize="@dimen/sp10" />

                    <TextView
                        android:id="@+id/tvMaxInsuranceRate"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:alpha="0.5"
                        android:fontFamily="@font/poppins_regular"
                        android:gravity="end"
                        android:text="@string/percentage_10"
                        android:textSize="@dimen/sp10" />

                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp3"
                android:background="@color/colorDivider" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/dp16">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_regular"
                    android:text="@string/finance_breakdown"
                    android:textAllCaps="true"
                    android:textColor="@color/colorBlack" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp8"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:fontFamily="@font/poppins_regular"
                        android:text="@string/total_car_price" />

                    <TextView
                        android:id="@+id/tvTotalPrice"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:fontFamily="@font/poppins_regular"
                        android:gravity="end"
                        android:text="@string/aed_15000" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp8"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:fontFamily="@font/poppins_regular"
                        android:text="@string/down_payment" />

                    <TextView
                        android:id="@+id/tvDownPayment"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:fontFamily="@font/poppins_regular"
                        android:gravity="end"
                        android:text="AED 0" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp8"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:fontFamily="@font/poppins_bold"
                        android:text="@string/monthly_installment"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvMonthlyInstallment"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:fontFamily="@font/poppins_bold"
                        android:gravity="end"
                        android:text="AED 0"
                        android:textStyle="bold" />

                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp3"
                android:background="@color/colorDivider" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/dp16">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_regular"
                    android:text="@string/driveaway_payment"
                    android:textAllCaps="true"
                    android:textColor="@color/colorBlack" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp8"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:fontFamily="@font/poppins_regular"
                        android:text="@string/down_payment" />

                    <TextView
                        android:id="@+id/tvDriveDownPayment"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:fontFamily="@font/poppins_regular"
                        android:gravity="end"
                        android:text="@string/aed_15000" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp8"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:fontFamily="@font/poppins_regular"
                        android:text="@string/insurance_first_year" />

                    <TextView
                        android:id="@+id/tvInsuranceFirstYear"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:fontFamily="@font/poppins_regular"
                        android:gravity="end"
                        android:text="@string/aed_15000" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp8"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:fontFamily="@font/poppins_regular"
                        android:text="@string/registration_fee" />

                    <TextView
                        android:id="@+id/tvRegistrationFee"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:fontFamily="@font/poppins_regular"
                        android:gravity="end"
                        android:text="@string/aed_15000" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp8"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/poppins_bold"
                        android:text="@string/total_upfront_payment"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvTotalUpFrontPayment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_bold"
                        android:gravity="end"
                        android:text="@string/aed_15000"
                        android:textStyle="bold" />

                </LinearLayout>

            </LinearLayout>

            <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp5"
                android:layout_marginTop="@dimen/dp20"
                android:layout_marginEnd="@dimen/dp5"
                android:elevation="@dimen/dp3"
                app:cardCornerRadius="@dimen/dp3">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bank_slider_drawable"
                    android:orientation="vertical"
                    android:paddingStart="@dimen/dp16"
                    android:paddingEnd="@dimen/dp16">

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/recyclerViewBank"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp5"
                        android:layout_weight="1"
                        android:background="@android:color/transparent" />

                    <com.kingfisher.easyviewindicator.RecyclerViewIndicator
                        android:id="@+id/IndicatorViewBank"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:layout_marginTop="@dimen/dp5"
                        android:layout_marginBottom="@dimen/dp5"
                        app:avi_animation_enable="false"
                        app:avi_drawable="@drawable/slider"
                        app:avi_drawable_unselected="@drawable/slider2"
                        app:avi_height="12dp"
                        app:avi_margin="6dp"
                        app:avi_width="12dp" />
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp5"
                android:layout_marginTop="@dimen/dp20"
                android:layout_marginEnd="@dimen/dp5"
                android:elevation="@dimen/dp3"
                app:cardCornerRadius="@dimen/dp3">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bank_slider_drawable"
                    android:orientation="vertical"
                    android:paddingStart="@dimen/dp16"
                    android:paddingEnd="@dimen/dp16">

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/recyclerViewInsurance"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp5"
                        android:background="@android:color/transparent" />

                    <com.kingfisher.easyviewindicator.RecyclerViewIndicator
                        android:id="@+id/indicatorInsurance"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:layout_marginTop="@dimen/dp5"
                        android:layout_marginBottom="@dimen/dp5"
                        app:avi_animation_enable="false"
                        app:avi_drawable="@drawable/slider"
                        app:avi_drawable_unselected="@drawable/slider2"
                        app:avi_height="12dp"
                        app:avi_margin="6dp"
                        app:avi_width="12dp" />
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>

    </ScrollView>

</layout>