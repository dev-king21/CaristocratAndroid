<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="@dimen/dp10">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp220"
            app:cardCornerRadius="@dimen/dp5">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/rounded_drawable_bg">

                <LinearLayout
                    android:id="@+id/llBackLuxuryMarketItem"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/image_placeholder"
                    android:orientation="vertical"
                    android:paddingTop="@dimen/dp20" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:alpha="0.65"
                    android:background="@color/colorBlack" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingTop="@dimen/dp20">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp20"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvBackLuxuryMarketItemHeader"
                            style="@style/SubCategoryArticleTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:shadowColor="@color/colorBlack"
                            android:textColor="@color/colorWhite"
                            android:shadowDx="-5"
                            android:shadowDy="-5"
                            android:shadowRadius="1"
                            android:layout_weight="1"
                            android:text="@string/the_outlet_mall" />

                        <TextView
                            android:id="@+id/tvBackLuxuryMarketItemDesc"
                            style="@style/SubCategoryArticleDescription"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp8"
                            android:ellipsize="end"
                            android:maxLines="4"
                            android:shadowColor="@color/colorBlack"
                            android:textColor="@color/colorWhite"
                            android:shadowDx="-5"
                            android:shadowDy="-5"
                            android:shadowRadius="1"
                            android:text="@string/sample_text" />

                    </LinearLayout>

                </LinearLayout>

                <ImageButton
                    android:id="@+id/ibBackInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginTop="@dimen/dp20"
                    android:background="@null"
                    android:padding="@dimen/dp10"
                    android:src="@drawable/info" />

            </FrameLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>

</layout>