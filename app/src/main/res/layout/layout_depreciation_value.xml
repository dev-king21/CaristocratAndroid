<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp8"
        android:background="@color/colorWhite"
        android:orientation="vertical"
        android:padding="@dimen/dp16">

        <ProgressBar
            android:id="@+id/profileDepreciationProgress"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="@dimen/dp120"
            android:layout_height="@dimen/dp16"
            android:max="100"
            android:progressTint="@color/colorBlack"
            android:secondaryProgressTint="@color/bg_gray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-8dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"
                android:gravity="center"
                android:orientation="vertical">

                <View
                    android:layout_width="@dimen/dp2"
                    android:layout_height="@dimen/dp16"
                    android:background="@color/colorBlack" />

                <TextView
                    android:id="@+id/tvYearOne"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp8"
                    android:fontFamily="@font/poppins_regular"
                    android:text="2018"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/sp18" />

                <TextView
                    android:id="@+id/tvYearOnePrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_regular"
                    android:maxLines="1"
                    android:text="$ 123123213123"
                    android:textSize="@dimen/sp10" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</layout>