<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingStart="@dimen/sp14"
        android:paddingEnd="@dimen/dp14"
        android:paddingTop="@dimen/dp10"
        android:padding="@dimen/dp10"
        android:layout_marginBottom="@dimen/dp10"
        android:background="@drawable/rounded_segmented_car_bg"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tvSegmentName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAllCaps="true"
            android:gravity="center_vertical"
            android:fontFamily="@font/ailerons_typeface"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/sp28"/>
        <ImageView
            android:id="@+id/ivSegmentedCar"
            android:layout_width="@dimen/dp100"
            android:layout_height="@dimen/dp100"
            android:layout_gravity="end"
            android:src="@drawable/image2"/>

    </LinearLayout>
</layout>