<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/llButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/filter_brand_model_unselected"
                android:button="@null"
                android:ellipsize="marquee"
                android:gravity="center"
                android:padding="@dimen/dp12"
                android:paddingStart="@dimen/dp24"
                android:paddingEnd="@dimen/dp24"
                android:singleLine="true"
                android:text="@string/app_name"
                android:textColor="@drawable/filter_brand_model_textcolor_selector"
                android:textSize="@dimen/sp12" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/dp16"
            android:layout_height="@dimen/dp16"
            android:layout_below="@+id/llButton"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="-24dp"
            android:layout_marginEnd="@dimen/dp4"
            android:background="@color/colorWhite">

            <CheckBox
                android:id="@+id/checkbox"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/filter_model_version_background_selector"
                android:button="@null" />

        </LinearLayout>

    </RelativeLayout>

</layout>