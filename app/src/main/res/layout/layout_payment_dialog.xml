<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/dialog_round_bg"
        android:padding="@dimen/dp20">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_regular"
            android:gravity="center"
            android:text="Subscription"
            android:textAllCaps="true"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/sp20" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp16"
            android:layout_marginTop="@dimen/dp8"
            android:fontFamily="@font/poppins_light"
            android:textColor="@color/colorBlack"
            android:gravity="center"
            android:text="This feature is available only in the paid membership subscription. Subscribe to the Professional Comparison and get the full access to compare cars in each segment and sub-segment."
            android:textSize="@dimen/text_body_2" />

        <Button
            android:id="@+id/btnPay"
            style="@style/CustomButton"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp50"
            android:text="pay"
            android:textSize="@dimen/sp13" />


    </LinearLayout>

</layout>